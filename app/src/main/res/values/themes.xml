<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Shosu" parent="android:Theme.Material.Light.NoActionBar" />

    <style name="Theme.Shosu.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">#FF953949</item>

        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_logo</item>

        <item name="windowSplashScreenIconBackgroundColor">@color/white</item>
        <item name="postSplashScreenTheme">@style/Theme.Shosu</item>
        <!-- 旧版 Android 兼容性 -->
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>

        <!-- 确保没有Action Bar -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>

</resources>